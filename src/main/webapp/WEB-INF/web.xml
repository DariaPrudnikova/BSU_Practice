<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>status</servlet-name>
        <servlet-class>com.bsu.StatusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>name</servlet-name>
        <servlet-class>com.bsu.NameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>check</servlet-name>
        <servlet-class>com.bsu.CheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>page</servlet-name>
        <jsp-file>/WEB-INF/page.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>forward</servlet-name>
        <servlet-class>com.bsu.ForwardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>redirect</servlet-name>
        <servlet-class>com.bsu.RedirectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tweet</servlet-name>
        <servlet-class>com.bsu.TweetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>com.bsu.FileUploadServlet</servlet-class>
    </servlet>
    <filter>
        <filter-name>filter</filter-name>
        <filter-class>com.bsu.TimeMeasurementFilter</filter-class>
    </filter>

    
    <servlet-mapping>
        <servlet-name>tweet</servlet-name>
        <url-pattern>/tweets/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>status</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>name</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>check</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>page</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>forward</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redirect</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
